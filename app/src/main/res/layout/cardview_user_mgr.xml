<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/card_notification"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/button_selector2"
    android:orientation="horizontal"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        app:cardCornerRadius="25dp">

        <ImageView
            android:id="@+id/user_avt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/img_no_image"
            android:scaleType="fitXY" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_gravity="center_vertical"
            android:text="Email"
            android:textSize="15sp"
            android:textColor="@color/blue_custom" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_gravity="center_vertical"
            android:text="Tên"
            android:textSize="15sp"
            android:textColor="@color/blue_custom" />

        <TextView
            android:id="@+id/user_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_gravity="center_vertical"
            android:text="Địa chỉ"
            android:textSize="15sp"
            android:textColor="@color/blue_custom" />

        <TextView
            android:id="@+id/user_join_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_gravity="center_vertical"
            android:text="Ngày tham gia"
            android:textSize="15sp"
            android:textColor="@color/blue_custom" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btn_activate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KÍCH HOẠT" />

            <Button
                android:id="@+id/btn_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XÓA" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>